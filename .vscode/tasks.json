{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "isBackground": true,
  "tasks": [
    {
      "label": "current_ebota",
      "type": "shell",
      "command": "./test/compile.sh asm test/main.c test/main",
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "asm_ebota",
      "type": "shell",
      "command": "./test/compile.sh asm ${relativeFile} ${relativeFileDirname}/${fileBasenameNoExtension}",
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "run_ebota",
      "type": "shell",
      "command": "./test/compile.sh build ${relativeFile} && ./build",
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "log_ebota",
      "type": "shell",
      "command": "./test/compile.sh build ${relativeFile} 2> ${relativeFileDirname}/${fileBasenameNoExtension}.log",
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "dbg_ebota",
      "type": "shell",
      "command": "./test/compile.sh debug ${relativeFile}",
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "clear": true
      }
    }
  ]
}
