{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "isBackground": true,
    "tasks": [
        {
            "label": "current_ebota",
            "type": "shell",
            "command": "clang-12 -std=c2x test/_f.c -Ofast -march=native -S -masm=intel -o test/_f.S",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "asm_ebota",
            "type": "shell",
            "command": "clang-12 -std=c2x ${relativeFile} -Ofast -march=native -S -masm=intel -o ${relativeFileDirname}/${fileBasenameNoExtension}.S",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "run_ebota",
            "type": "shell",
            "command": "clang-12 -std=c2x ${relativeFile} -Ofast -march=native && ./a.out",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "dbg_ebota",
            "type": "shell",
            "command": "clang-12 -std=c2x ${relativeFile} -g",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "clear": true
            }
        }
    ]
}
